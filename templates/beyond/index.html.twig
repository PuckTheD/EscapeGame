      <div class="folders">
        <img src="img/folder.png">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#folder4">
          Evelyn
        </button>
        </div>
      <!-- Modal -->
      <div class="modal fade" id="folder4" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
