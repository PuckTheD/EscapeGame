            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
          </div>
        </div>
      </div>
  
         <!-- cinquième dossier "Corbeille" -->
      <!-- Button trigger modal -->
      <div class="folders">
        <img src="img/trash.png">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#folder5">
          Corbeille
        </button>
        </div>
      <!-- Modal -->
      <div class="modal fade" id="folder5" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Corbeille</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              J'ai ouvert le dossier Corbeille
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
          </div>
        </div>
      </div>
  
           <!-- Sixième dossier "Désinstalleur" -->
      <!-- Button trigger modal -->
      <div class="folders">
        <img src="img/folder.png">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#folder6">
          Désintalleur
        </button>
        </div>
      <!-- Modal -->
      <div class="modal fade" id="folder6" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Désintalleur</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              J'ai ouvert le dossier désintalleur
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
          </div>
        </div>
      </div>
  
    </div>

        
        <div class="post-it">NOTES:
            <hr>
            <ul>
                <li>Aller boire un Spinoza avec Rachel !</li>
            </ul>
        </div>
    </div>
    {% block body %}{% endblock %}


</body>

</html>