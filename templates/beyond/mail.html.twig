{% extends 'base-beyond.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset ('assets/css/beyond-mailing-box-style.css') }} ">
{% endblock %}

{% block body %}

    <div class="bg-desktop">

        <div>
            <div class="content">
                <h1>Boîte de réception</h1>

                <table class="table table-sm">
                    <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Expéditeur</th>
                        <th scope="col">Objet</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for mail in data %}
                        <tr>
                            <td>{{mail.date}}</td>
                            <td>{{mail.expediteur}}</td>
                            <td>{{mail.objet}} <span class="float-right pr-5"><a href="#" data-toggle="modal" data-target=".contenu-mail"><i class="fas fa-play"></i></a></span></td>
                            <div class="modal fade contenu-mail" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Message</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>{{mail.contenu}}</p>
                                        </div>
                                        <div class="modal-footer">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </tr>

                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>


