<form method="post" action="{{ path('current_game_delete', {'id': current_game.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ current_game.id) }}">
    <button class="btn">Delete</button>
</form>
