{% extends 'base.html.twig' %}

{% block title %}CurrentGame index{% endblock %}

{% block body %}
    <h1>CurrentGame index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for current_game in current_games %}
            <tr>
                <td>{{ current_game.id }}</td>
                <td>
                    <a href="{{ path('current_game_show', {'id': current_game.id}) }}">show</a>
                    <a href="{{ path('current_game_edit', {'id': current_game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('current_game_new') }}">Create new</a>
{% endblock %}
