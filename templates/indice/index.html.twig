{% extends 'base.html.twig' %}

{% block title %}Indice index{% endblock %}

{% block body %}
    <h1>Indice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hint</th>
                <th>Scenario_id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for indice in indices %}
            <tr>
                <td>{{ indice.id }}</td>
                <td>{{ indice.hint }}</td>
                <td>{{ indice.scenarioId }}</td>
                <td>
                    <a href="{{ path('indice_show', {'id': indice.id}) }}">show</a>
                    <a href="{{ path('indice_edit', {'id': indice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('indice_new') }}">Create new</a>
{% endblock %}
