{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class="text-center">Devenez un nouvel aventurier !</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'col-6 border border-dark rounded p-3 mx-auto'}}) }}
        {{ form_row(registrationForm.email, {'label': 'Adresse e-mail', 'attr': {'placeholder': 'renseigner e-mail'} }) }}
        {{ form_row(registrationForm.nickname, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'renseigner un pseudo'} }) }}
        {{ form_row(registrationForm.plainPassword.first) }}
        {{ form_row(registrationForm.plainPassword.second) }}
        {{ form_row(registrationForm.avatar, {'label': 'Votre avatar (non obligatoire)'}) }}
        {{ form_row(registrationForm.agreeTerms, {'label': 'J\'accepte les conditions'}) }}

        <button class="btn btn-success">Valider inscription</button>
    {{ form_end(registrationForm) }}
{% endblock %}
