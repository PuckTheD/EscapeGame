{% extends 'base.html.twig' %}

{% block title %}Scenario index{% endblock %}

{% block body %}
    <h1>Scenario index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nb_jour</th>
                <th>Duree</th>
                <th>Th√®me</th>
                <th>indices</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for scenario in scenarios %}
            <tr>
                <td>{{ scenario.id }}</td>
                <td>{{ scenario.nbJour }}</td>
                <td>{{ scenario.duree ? scenario.duree|date('H:i:s') : '' }}</td>
                <td>
                    {% for thematique in scenario.thematiques %}
                        {{ thematique.titre }}
                        {% if not loop.last %},{% endif %}
                    {% endfor %}
               <td>
                    {% for indice in scenario.indices %}
                        {{ indice.titre }}
                        {% if not loop.last %},{% endif %}
                    {% endfor %}
                
                <td>
                    <a href="{{ path('scenario_show', {'id': scenario.id}) }}">show</a>
                    <a href="{{ path('scenario_edit', {'id': scenario.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('scenario_new') }}">Create new</a>
{% endblock %}
